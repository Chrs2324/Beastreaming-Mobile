<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.app.toyo.youtubePlayerFragment.MainActivity"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="127dp">

        <fragment
            android:id="@+id/youtubePlayerFragment"
            android:name="com.google.android.youtube.player.YouTubePlayerFragment"
            android:layout_width="395dp"
            android:layout_height="246dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="155dp"
            android:layout_marginBottom="15dp"
            android:text="@string/home"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignTop="@+id/imageButton4"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="69dp"
            android:onClick="onClick"
            android:src="@mipmap/ic_launcher_foreground" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="69dp"
            android:onClick="onClick2"
            android:src="@mipmap/trending_flame" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="44dp"

            android:layout_marginRight="34dp"
            android:layout_marginBottom="69dp"
            android:onClick="onClick3"
            android:src="@mipmap/about_us_icon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginBottom="240dp"
            android:text="Watch our playlist of recommended news. We throughly uncover news that we feel is worth your viewing pleasure!" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>